{
    "extends": [
        "stylelint-config-recommended",
        "stylelint-config-wordpress"
    ],
    "rules": {
        "indentation": 4,
        "no-descending-specificity": null,
        "selector-class-pattern": null,
        "font-family-no-missing-generic-family-keyword": null
    },
    "ignoreFiles": [
        "node_modules/**/*",
        "vendor/**/*",
        "dist/**/*",
        "build/**/*",
        "*.min.css"
    ]
}
